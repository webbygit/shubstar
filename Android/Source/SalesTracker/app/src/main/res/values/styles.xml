<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>

        <!--<item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>-->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>

        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">#777777</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

        <item name="android:textColorHint">#777777</item>
    </style>

    <style name="AppThemeLogin" parent="AppTheme">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>

        <item name="android:textColorHint">#c5c5c5</item>
    </style>

    <style name="AppThemeTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewShadowLogo">
        <item name="android:shadowDy">40</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowColor">@color/black_trans</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TextLabelWhite" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextLabelPrimary" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.CustomTranslucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextViewShadow">
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowColor">@color/black_trans</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="CardViewGeneral" parent="CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="contentPaddingLeft">-1.5dp</item>
        <item name="contentPaddingRight">-1.5dp</item>
        <item name="contentPaddingTop">-1.5dp</item>
        <item name="contentPaddingBottom">-1.5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.salestrackmobileapp.android.fragments.CheckInPriOrderFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/checkin_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.salestrackmobileapp.android.custome_views.Custome_BoldTextView
                android:id="@+id/goal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/dark_dim_gray" />

            <com.salestrackmobileapp.android.custome_views.Custome_TextView
                android:id="@+id/desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="description"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/dark_dim_gray" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.salestrackmobileapp.android.custome_views.Custome_TextView
                    android:id="@+id/number_items_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Quantity:0"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/dark_dim_gray" />

                <com.salestrackmobileapp.android.custome_views.Custome_TextView
                    android:id="@+id/amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Amount:0"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/dark_dim_gray" />

            </RelativeLayout>

            <com.salestrackmobileapp.android.custome_views.Custome_TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="Contact Detail "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:padding="10dp">

                <com.salestrackmobileapp.android.custome_views.Custome_TextView
                    android:id="@+id/business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="aaaaaaaa"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <com.salestrackmobileapp.android.custome_views.Custome_TextView
                    android:id="@+id/contect_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="aaaaaaaa"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:visibility="gone" />

            </LinearLayout>

            <Button
                android:id="@+id/check_in_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector_blue_button"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Check In"
                android:textAppearance="?android:textAppearanceMedium" />

            <Button
                android:id="@+id/view_past_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_blue_button"
                android:gravity="center"
                android:text="View Past Order"
                android:textAppearance="?android:textAppearanceMedium" />

            <Button
                android:id="@+id/notes_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_blue_button"
                android:gravity="center"
                android:text="Notes"
                android:textAppearance="?android:textAppearanceMedium" />

            <Button
                android:id="@+id/visited_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_blue_button"
                android:gravity="center"
                android:text="View Visits"
                android:textAppearance="?android:textAppearanceMedium"
                android:visibility="gone" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/previous_order_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

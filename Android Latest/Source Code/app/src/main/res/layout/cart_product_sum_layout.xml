<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="5dp"
    card_view:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/product_item_img"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="@color/light_gray"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/calendar_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:padding="20dp">

            <com.salestrackmobileapp.android.custome_views.Custome_TextView
                android:id="@+id/product_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupen Code"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray" />

            <com.salestrackmobileapp.android.custome_views.Custome_TextView
                android:id="@+id/mrp_product_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sub Title"
                android:textColor="@color/green"
                android:textSize="12dp" />

            <com.salestrackmobileapp.android.custome_views.Custome_BoldTextView
                android:id="@+id/actualAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.salestrackmobileapp.android.custome_views.Custome_TextView
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:minLines="2"
                android:text="Sub Title"
                android:textColor="@color/dark_dim_gray"
                android:textSize="12dp" />


            <com.salestrackmobileapp.android.custome_views.Custome_TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Title"
                android:textColor="@color/dark_dim_gray"
                android:textSize="12dp"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/gray_underline" />
</android.support.v7.widget.CardView>